{% extends 'index.html.twig' %}

{% block page_content %}

    <div class="card">
        <div class="card-header">

            <div class="row">
                <div class="col-8">
                    <h3>Importação de Movimentações</h3>
                </div>
            </div>

        </div>

        <div class="card-body">

            <div class="row">
                <div class="col-7">
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Extrato</label>
                        <textarea class="form-control" id="linhasExtrato" name="linhasExtrato" rows="6"></textarea>
                    </div>
                </div>



                <div class="col-5">
                    <div class="form-group row">
                        <label class="col-form-label col-sm-4 form-control-label required">Tipo de Extrato</label>
                        <div class="col-sm-8">
                            <select id="tipoExtrato" name="tipoExtrato" class="form-control"></select>
                        </div>
                    </div>

                    <div class="form-group row" id="grupoRow" style="display: none">
                        <label class="col-form-label col-sm-4 form-control-label required">Grupo</label>
                        <div class="col-sm-8">
                            <select id="grupo" name="grupo" class="form-control"></select>
                        </div>

                        <label class="col-form-label col-sm-4 form-control-label required">Grupo Item</label>
                        <div class="col-sm-8">
                            <select id="grupoItem" name="grupoItem" class="form-control"></select>
                        </div>
                    </div>

                    <div class="form-group row" id="carteiraExtratoRow" style="display: none">
                        <label class="col-form-label col-sm-4 form-control-label required">Carteira Extrato</label>
                        <div class="col-sm-8">
                            <select id="carteiraExtrato" name="carteiraExtrato" class="form-control"></select>
                        </div>
                    </div>

                    <div class="form-group row" id="carteiraDestinoRow" style="display: none">
                        <label class="col-form-label col-sm-4 form-control-label required">Carteira Destino</label>
                        <div class="col-sm-8">
                            <select id="carteiraDestino" name="carteiraDestino" class="form-control"></select>
                        </div>
                    </div>

                    <div class="form-group row" id="gerarRow" style="display: none">
                        <label class="col-form-label col-sm-4 form-control-label required">Gerar</label>
                        <div class="col-sm-8">
                            <input class="form-check-input" type="checkbox" value="" id="gerar" name="gerar">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col text-right">
                            <button type="submit" class="btn btn-primary btn-lg" value="Salvar">
                                <i class="fas fa-save" aria-hidden="true"></i> Salvar
                            </button>

                            <button type="button" value="Resetar" class="btn btn-secondary"
                                    data-url="{{ url('fin_carteira_form') }}"
                                    data-target="#confirmationModal" data-toggle="modal">
                                <i class="fas fa-undo" aria-hidden="true"></i> Recarregar
                            </button>
                        </div>
                    </div>

                </div>
            </div>


        </div>
    </div>

{% endblock %}

{% block down_scripts %}
    <script src="{{ asset('build/fin/movimentacaoImport.js') }}"></script>
{% endblock %}