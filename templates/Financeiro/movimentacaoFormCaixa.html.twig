{% extends 'index.html.twig' %}




{% block page_content %}

    <div class="card">
        <div class="card-header">

            <div class="row">
                <div class="col-8">
                    <h3>Movimentação de Caixa</h3>
                </div>
                <div class="col-4 text-right">

                </div>
            </div>

        </div>

        <div class="card-body">

            {% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

            {{ form_start(form) }}

            {% do form.centroCusto.setRendered() %}
            {% do form.dtVencto.setRendered() %}
            {% do form.dtVenctoEfetiva.setRendered() %}
            {% do form.dtPagto.setRendered() %}
            {% do form.dtUtil.setRendered() %}
            {% do form.descontos.setRendered() %}
            {% do form.acrescimos.setRendered() %}
            {% do form.valorTotal.setRendered() %}
            {% do form.documentoBanco.setRendered() %}
            {% do form.chequeBanco.setRendered() %}
            {% do form.chequeAgencia.setRendered() %}
            {% do form.chequeNumCheque.setRendered() %}
            {% do form.chequeConta.setRendered() %}
            {% do form.recorrente.setRendered() %}
            {% do form.recorrDia.setRendered() %}
            {% do form.recorrFrequencia.setRendered() %}
            {% do form.recorrTipoRepet.setRendered() %}
            {% do form.recorrVariacao.setRendered() %}

            {{ form_widget(form) }}

            <div class="row">
                <div class="col text-right">
                    <button type="submit" class="btn btn-primary btn-lg" value="Salvar">
                        <i class="fas fa-save" aria-hidden="true"></i> Salvar
                    </button>

                    <button type="button" value="Resetar" class="btn btn-secondary"
                            data-url="{{ url('fin_movimentacao_form') }}"
                            data-target="#confirmationModal" data-toggle="modal">
                        <i class="fas fa-undo" aria-hidden="true"></i> Recarregar
                    </button>
                </div>
            </div>


            {{ form_end(form, {'render_rest': false}) }}


        </div>
    </div>





{% endblock %}


{% block down_scripts %}
    <script src="{{ asset('build/fin/movimentacaoFormCaixa.js') }}"></script>
{% endblock %}