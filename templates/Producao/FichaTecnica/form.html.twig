{% extends 'index.html.twig' %}

{% block page_content %}

<div class="card">
	<div class="card-header">

		<div class="row">
			<div class="col-8">
				<h3>Ficha Técnica</h3>
			</div>			
		</div>

	</div>

	<div class="card-body">

		<div class="form-group row">
			<label class="col-form-label col-sm-2 form-control-label" for="confeccao">Confecção</label>
			<div class="col-sm-8">
				<input type="text" id="confeccao" readonly="readonly" class="form-control" value="{{ confeccao.descricao }}">
			</div>
			<div class="col-sm-2 text-right">
				<button type="button" class="btn btn-warning"
					onclick="window.location.assign('{{ url('prod_confeccao_form') }}' + '/' + {{ confeccao.id }})">
					<i class="fas fa-wrench" aria-hidden="true"></i> Editar
				</button>
				<button type="button" class="btn btn-secondary"
					onclick="window.location.assign('{{ url('prod_fichaTecnica_inicial') }}' + '/' + {{ confeccao.id }})">
					<i class="fas fa-sync" aria-hidden="true"></i> Alternar
				</button>
			</div>
		</div>

	</div>
	
    {{ include('Producao/FichaTecnica/tabela.html.twig') }}
</div>

{% endblock %}

