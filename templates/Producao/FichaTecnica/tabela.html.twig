

<div class="table-responsive-sm">
	<table class="table table-sm table-bordered table-hover">

		<thead>
			<tr>
				<th>#</th>
				<th>Insumo</th>
				<th>Pre√ßo</th>

				{% for gi in tabela.grade %}
				<th class="table-primary">{{ gi.tamanho }}</th>
				{% endfor %}

				<th></th>
			</tr>
		</thead>

		<tbody>
			{% for tipoInsumo, r in tabela.tiposInsumos %}
			<tr>
				<th colspan="9999" class="table-secondary"><h5 class="text-center">{{ tipoInsumo }}</h5></th>
			</tr>
    			{% for insumo in r.insumos %}
    			<tr>
    				<td><input type="checkbox" /></td>
    				<td>{{ insumo.descricao }}</td>
    				<td class="text-right">{{ insumo.preco|number_format(2, ',', '.') }}</td>
    
    				{% for gi in tabela.grade %}
    					<td class="text-right">{{ attribute(insumo,'grade')[gi.ordem] }}</td>
    				{% endfor %}
    
    				<td class="text-right">
    					<button type="button" class="btn btn-primary" onclick="window.location.href='#'">
    						<i class="fas fa-wrench" aria-hidden="true"></i>
    					</button>
    
    					<button type="button" class="btn btn-danger" data-url="" data-token="{{ csrf_token('delete') }}" data-target="#confirmationModal"
    						data-toggle="modal">
    						<i class="fa fa-trash" aria-hidden="true"></i>
    					</button>
    				</td>
    			</tr>
    			{% endfor %}
    			<tr>
    				<td></td>
    				<td></td>
    				<td></td>
    
    				{% for gi in tabela.grade %}
    					<td class="text-right">{{ attribute(tabela.totalPorTipoInsumo,tipoInsumo)[gi.ordem] }}</td>
    				{% endfor %}
    
    				<td></td>
    			</tr>
			{% endfor %}
		</tbody>

	</table>
</div>
