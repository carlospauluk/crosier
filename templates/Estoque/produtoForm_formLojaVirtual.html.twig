{% form_theme ocProductForm 'bootstrap_4_horizontal_layout.html.twig' %}

{{ form_start(ocProductForm) }}

{{ form_row(ocProductForm._token) }}
{{ form_row(ocProductForm.id) }}
{{ form_row(ocProductForm.sku) }}
{{ form_row(ocProductForm.titulo) }}

<div class="form-group row">
    <label class="col-form-label col-sm-2 required" for="oc_product_descricao">Descrição</label>
    <div class="col-sm-10">
        <textarea id="oc_product_descricao" name="oc_product[descricao]" required="required"
                  class="form-control">{{ ocProductForm.descricao.vars.value|raw }}</textarea>
    </div>
</div>


{{ form_row(ocProductForm.modelo) }}
{{ form_row(ocProductForm.marca_id) }}
{{ form_row(ocProductForm.depto_id) }}
{{ form_row(ocProductForm.preco) }}
{{ form_row(ocProductForm.qtde) }}

<div class="card">
    <h5 class="card-header">Dimensões</h5>
    <div class="card-body">
            {{ form_row(ocProductForm.dimensaoC) }}
            {{ form_row(ocProductForm.dimensaoA) }}
            {{ form_row(ocProductForm.dimensaoL) }}
    </div>
</div>

{{ form_row(ocProductForm.status) }}


<div class="row">
    <div class="col text-right">
        <button type="submit" class="btn btn-primary btn-lg" value="Salvar">
            <i class="fas fa-save" aria-hidden="true"></i> Salvar
        </button>

        <button type="button" value="Resetar" class="btn btn-secondary"
                data-url="{{ url('est_produto_form') }}"
                data-target="#confirmationModal" data-toggle="modal">
            <i class="fas fa-undo" aria-hidden="true"></i> Recarregar
        </button>
    </div>
</div>


{{ form_end(ocProductForm, {'render_rest': false}) }}